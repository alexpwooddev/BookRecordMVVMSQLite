<UserControl x:Class="BookRecordMVVMSQLite.View.UserControls.CommentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookRecordMVVMSQLite.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="200">
    <Grid>
        <StackPanel Orientation="Vertical" >
            <TextBlock x:Name="commentContentTextBlock"
                   Text="{Binding CommentContent}"
                   TextWrapping="Wrap"
                    MaxWidth="200"
                   TextAlignment="Left"/>
        </StackPanel>
        
    </Grid>
</UserControl>
